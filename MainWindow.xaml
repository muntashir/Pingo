<Window x:Class="Pingo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pingo - Idle" Height="467.775" Width="572.906" ResizeMode="NoResize" Icon="Icon1.ico" >
    <Grid Background="#FFC5C5C5">
        <ListView x:Name="lsvOutput" Height="271" Margin="10,0,106,77" VerticalAlignment="Bottom" Grid.ColumnSpan="2" FontSize="16" >
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Hostname" DisplayMemberBinding="{Binding Hostname}"/>
                    <GridViewColumn Header="Status" DisplayMemberBinding="{Binding Status}"/>
                    <GridViewColumn Header="Last updated" DisplayMemberBinding="{Binding Timestamp}"/>
                </GridView>
            </ListView.View>
            <ListView.ItemContainerStyle>
                <Style TargetType="{x:Type ListViewItem}">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Status}" Value="Online">
                            <Setter Property="Background" Value="Green"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Status}" Value="Offline">
                            <Setter Property="Background" Value="Red"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>
        <TextBox x:Name="txtInput"  TextWrapping="Wrap" Text="Enter a hostname or IP" VerticalAlignment="Bottom" Margin="10,0,106,10" Height="53" AcceptsReturn="True" Grid.ColumnSpan="2" FontSize="14"/>
        <Button x:Name="btnEnter" Margin="466,0,0,9" Content="Enter" Width="82" VerticalAlignment="Bottom" RenderTransformOrigin="0.007,0.578" Height="53" Click="btnEnter_Click" IsDefault="True" HorizontalAlignment="Left" FontSize="14"/>
        <Button x:Name="btnRefreshAll" Content="Refresh&#xA; All" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="82" Margin="466,0,0,242" Height="50" Click="btnRefreshAll_Click" FontSize="14"/>
        <Button x:Name="btnRefreshSelected" Content="Refresh&#xA; Selection" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="82" Margin="466,0,0,297" Height="50" Click="btnRefreshSelected_Click" FontSize="14"/>
        <Button x:Name="btnExport" Content="Export" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="82" Margin="466,0,0,76" Height="50" FontSize="14" Click="btnExport_Click"/>
        <Label Content="Polling interval in minutes:" HorizontalAlignment="Left" Margin="10,0,0,386" VerticalAlignment="Bottom" FontSize="14"/>
        <TextBox x:Name="txtInterval" HorizontalAlignment="Left" Height="26" Margin="188,0,0,389" TextWrapping="Wrap" Text="10" VerticalAlignment="Bottom" Width="46" TextChanged="TextBox_TextChanged" IsReadOnly="True" FontSize="14"/>
        <Button x:Name="btnDelete" Content="Delete&#xA;Selected" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="82" Margin="466,0,0,187" Height="50" RenderTransformOrigin="0.567,-0.226" Click="btnDelete_Click" FontSize="14"/>
        <RepeatButton x:Name="btnMinus" Content="-" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="15" Margin="234,0,0,388" Height="13" Click="btnMinus_Click" FontSize="14"/>
        <RepeatButton x:Name="btnPlus" Content="+" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="15" Margin="234,0,0,402" Height="13" Click="RepeatButton_Click" FontSize="14"/>
        <Button x:Name="btnClear" Content="Delete&#xA;All" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="82" Margin="466,0,0,131" Height="50" RenderTransformOrigin="0.567,-0.226" Click="btnClear_Click" FontSize="14"/>
        <ProgressBar x:Name="ProgressBar1" HorizontalAlignment="Left" Height="28" Margin="10,0,0,355" VerticalAlignment="Bottom" Width="538" />
        <Button x:Name="btnEnable" Content="Disable Polling" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="125" Margin="254,0,0,389" Height="26" Click="btnEnable_Click" FontSize="14"/>
        <Label x:Name="lblNextUpdate" Content="Next update in" HorizontalAlignment="Left" VerticalAlignment="Bottom" RenderTransformOrigin="0.864,0.952" Margin="384,0,0,387" FontSize="14"/>
    </Grid>
</Window>